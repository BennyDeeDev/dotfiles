    "list": "allow",
    "glob": "allow",
    "grep": "allow",
    "lsp": "allow",
    "edit": "ask",
    "bash": {
      "*": "ask",
      "go test": "allow",
      "go build": "allow",
      "go run": "allow",
      "go vet": "allow",
      "go fmt": "allow",
      "go mod": "allow",
      "gofmt": "allow",
      "golangci-lint": "allow",
      "cargo test": "allow",
