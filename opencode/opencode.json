      "cargo check": "allow",
      "cargo clippy": "allow",
      "cargo fmt": "allow",
      "npm test": "allow",
      "npm run": "allow",
      "npx": "allow",
      "node": "allow",
      "tsc": "allow",
      "eslint": "allow",
      "prettier": "allow",
      "make": "allow",
      "git status": "allow",
      "git log": "allow",
      "git diff": "allow",
      "git show": "allow",
      "git branch": "allow",
      "git stash list": "allow",
      "gh pr list": "allow",
