DOTFILES="$HOME/Repos/dotfiles"

export PATH="$HOME/.local/bin:$PATH"
export PATH="$DOTFILES/bin/common:$PATH"

[[ -f "$DOTFILES/bash/init" ]] && source "$DOTFILES/bash/init"
[[ -f "$DOTFILES/bash/aliases" ]] && source "$DOTFILES/bash/aliases"
[[ -f "$DOTFILES/bash/envs" ]] && source "$DOTFILES/bash/envs"
[[ -f "$DOTFILES/bash/functions" ]] && source "$DOTFILES/bash/functions"