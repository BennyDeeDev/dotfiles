input {
    keyboard {
        xkb {
            options "compose:ralt"
        }

        repeat-rate 25
        repeat-delay 150
        numlock
    }

    touchpad {
        tap
        natural-scroll
        scroll-factor 0.4
        accel-speed 0.0
        accel-profile "flat"
    }

    mouse {
        accel-speed 0.0
        accel-profile "flat"
    }
}
