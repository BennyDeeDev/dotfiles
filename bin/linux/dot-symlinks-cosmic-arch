#!/bin/bash

set -e

DOTFILES="$HOME/Repos/dotfiles"

"$DOTFILES/bin/common/dot-cmd-symlink" "$DOTFILES/ghostty" "$HOME/.config/ghostty"
"$DOTFILES/bin/common/dot-cmd-symlink" "$DOTFILES/ghostty/linux.conf" "$HOME/.config/ghostty/config-local"
"$DOTFILES/bin/common/dot-cmd-symlink" "$DOTFILES/nvim" "$HOME/.config/nvim"
"$DOTFILES/bin/common/dot-cmd-symlink" "$DOTFILES/tmux" "$HOME/.config/tmux"
"$DOTFILES/bin/common/dot-cmd-symlink" "$DOTFILES/.zshrc.arch" "$HOME/.zshrc"
"$DOTFILES/bin/common/dot-cmd-symlink" "$DOTFILES/brave-flags.conf" "$HOME/.config/brave-flags.conf"
"$DOTFILES/bin/common/dot-cmd-symlink" "$DOTFILES/k9s" "$HOME/.config/k9s"
"$DOTFILES/bin/common/dot-cmd-symlink" "$DOTFILES/vscode/keybindings-linux.json" "$HOME/.config/Code/User/keybindings.json"
"$DOTFILES/bin/common/dot-cmd-symlink" "$DOTFILES/vscode/settings.json" "$HOME/.config/Code/User/settings.json"
"$DOTFILES/bin/common/dot-cmd-symlink" "$DOTFILES/pipewire/pipewire.conf.d" "$HOME/.config/pipewire/pipewire.conf.d"
"$DOTFILES/bin/common/dot-cmd-symlink" "$DOTFILES/pipewire/pipewire-pulse.conf.d" "$HOME/.config/pipewire/pipewire-pulse.conf.d"
"$DOTFILES/bin/common/dot-cmd-symlink" "$DOTFILES/git/config" "$HOME/.gitconfig"
"$DOTFILES/bin/common/dot-cmd-symlink" "$DOTFILES/opencode" "$HOME/.config/opencode"

# COSMIC configs
"$DOTFILES/bin/common/dot-cmd-symlink" "$DOTFILES/cosmic" "$HOME/.config/cosmic"