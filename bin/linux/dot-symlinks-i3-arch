#!/bin/bash

set -e

DOTFILES="$HOME/Repos/dotfiles"

"$DOTFILES/bin/common/dot-cmd-symlink" "$DOTFILES/nvim" "$HOME/.config/nvim"
"$DOTFILES/bin/common/dot-cmd-symlink" "$DOTFILES/tmux" "$HOME/.config/tmux"
"$DOTFILES/bin/common/dot-cmd-symlink" "$DOTFILES/i3" "$HOME/.config/i3"
"$DOTFILES/bin/common/dot-cmd-symlink" "$DOTFILES/alacritty" "$HOME/.config/alacritty"
"$DOTFILES/bin/common/dot-cmd-symlink" "$DOTFILES/rofi" "$HOME/.config/rofi"
"$DOTFILES/bin/common/dot-cmd-symlink" "$DOTFILES/polybar" "$HOME/.config/polybar"
"$DOTFILES/bin/common/dot-cmd-symlink" "$DOTFILES/starship/starship.toml" "$HOME/.config/starship.toml"
"$DOTFILES/bin/common/dot-cmd-symlink" "$DOTFILES/.zshrc.arch" "$HOME/.zshrc"
"$DOTFILES/bin/common/dot-cmd-symlink" "$DOTFILES/git/config" "$HOME/.gitconfig"
